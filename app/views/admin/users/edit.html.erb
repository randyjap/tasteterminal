<%= link_to "Back to User Index", admin_users_path %>
<h1>User ID: <%= @user.id %></h1>

<%= form_for [:admin, @user] do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio, cols: "100", rows: "15" %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
