<style>
  table {
    width: 100%;
  }

  th {
    font-weight: 900;
  }

  th, tr, td {
    border: 1px solid black;
  }

</style>

<%= link_to "Back to Admin Navigation", admin_root_path %>
<%= link_to "Create New User", new_admin_user_path %>

<h1>Users</h1>

<table>
  <th>ID</th>
  <th>Username</th>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Email</th>
  <th>Bio</th>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.id, admin_user_path(user) %></td>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= link_to user.first_name, admin_user_path(user) %></td>
      <td><%= link_to user.last_name, admin_user_path(user) %></td>
      <td><%= link_to user.email, admin_user_path(user) %></td>
      <td><%= link_to user.bio, admin_user_path(user) %></td>
    </tr>
  <% end %>
</table>
